<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member.mapper">
	
	<insert id="join">
		insert into memberjoin(member_name,member_id,member_pw,member_phonenum,member_address,member_post)
		values(#{member_name}, #{member_id},#{member_pw},#{member_phonenum},#{member_address},#{member_post} )
	</insert>
	
	<select id="login" resultType="member.MemberVO">
		select * from memberjoin where member_id= #{id} and member_pw = #{pwd}
	</select>
	
	<select id="id_check" resultType="integer">
		select COUNT(*) from memberjoin where member_id= #{userid}
	</select>


</mapper>